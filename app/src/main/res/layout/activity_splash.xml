<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SplashActivity"
    android:background="@color/background_floating_material_dark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:contentDescription="Main logo"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:src="@drawable/gjettulator_logo"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/player_name_EditText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button_text"
        android:id="@+id/start_game_button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/player_name_EditText"
        android:layout_alignStart="@+id/player_name_EditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_input_helper"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/player_name_EditText" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_spinner"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/start_game_button"
        android:layout_alignStart="@+id/start_game_button"
        android:layout_alignEnd="@+id/start_game_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_select_helper"
        android:id="@+id/textView"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/title_spinner"
        android:layout_alignStart="@+id/title_spinner" />

</RelativeLayout>
